{
    "id": "/couchbase",
    "cpus": 2,
    "mem": 4096,
    "container": {
        "type": "DOCKER",
        "volumes": [],
        "docker": {
            "image": "misterbisson/triton-couchbase:enterprise-3.0.3-r2",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 8091,
                    "hostPort": 8091,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 8092,
                    "hostPort": 8092,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 11207,
                    "hostPort": 11207,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 11210,
                    "hostPort": 11210,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 11211,
                    "hostPort": 11211,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 18091,
                    "hostPort": 18091,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 18092,
                    "hostPort": 18092,
                    "protocol": "tcp"
                }
            ],
            "privileged": false,
            "parameters": [
                {
                    "key": "link",
                    "value": "mesos_consul_1:consul"
                },
                {
                    "key": "restart",
                    "value": "always"
                }
            ],
            "forcePullImage": false
        }
    },
    "instances": 1,
    "labels": {
        "environment": "demo",
        "service": "couchbase"
    },
    "maxLaunchDelaySeconds": 60,
    "upgradeStrategy": {
        "minimumHealthCapacity": 0.9,
        "maximumOverCapacity": 0.2
    },
    "uris": []
}
