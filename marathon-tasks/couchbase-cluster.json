{
    "id": "/clustered-couchbase",
    "apps": [
        {
            "id": "/clustered-couchbase/couchbase",
            "cpus": 2,
            "mem": 4096,
            "container": {
                "type": "DOCKER",
                "volumes": [],
                "docker": {
                    "image": "misterbisson/triton-couchbase",
                    "network": "BRIDGE",
                    "portMappings": [
                        {
                            "containerPort": 8091,
                            "hostPort": 8091,
                            "protocol": "tcp"
                        },
                        {
                            "containerPort": 8092,
                            "hostPort": 8092,
                            "protocol": "tcp"
                        },
                        {
                            "containerPort": 11207,
                            "hostPort": 11207,
                            "protocol": "tcp"
                        },
                        {
                            "containerPort": 11210,
                            "hostPort": 11210,
                            "protocol": "tcp"
                        },
                        {
                            "containerPort": 11211,
                            "hostPort": 11211,
                            "protocol": "tcp"
                        },
                        {
                            "containerPort": 18091,
                            "hostPort": 18091,
                            "protocol": "tcp"
                        },
                        {
                            "containerPort": 18092,
                            "hostPort": 18092,
                            "protocol": "tcp"
                        }
                    ],
                    "privileged": false,
                    "parameters": [
                        {
                            "key": "link",
                            "value": "mesos_consul_1:consul"
                        },
                        {
                            "key": "restart",
                            "value": "always"
                        }
                    ],
                    "forcePullImage": false
                }
            },
            "instances": 3,
            "maxLaunchDelaySeconds": 60,
            "upgradeStrategy": {
                "minimumHealthCapacity": 0.9,
                "maximumOverCapacity": 0.2
            },
            "uris": []
        },
        {
            "id": "/clustered-couchbase/benchmark",
            "cpus": 0.5,
            "mem": 1024,
            "cmd": "start.bash",
            "container": {
                "type": "DOCKER",
                "volumes": [],
                "docker": {
                    "image": "misterbisson/couchbase-cloud-benchmark",
                    "network": "BRIDGE",
                    "portMappings": [],
                    "privileged": false,
                    "parameters": [
                        {
                            "key": "link",
                            "value": "mesos_consul_1:consul"
                        }
                    ],
                    "forcePullImage": false
                }
            },
            "instances": 0,
            "maxLaunchDelaySeconds": 60,
            "upgradeStrategy": {
                "minimumHealthCapacity": 0.9,
                "maximumOverCapacity": 0.2
            },
            "uris": []
        }
    ]
}